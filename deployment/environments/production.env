# Production Environment Configuration for Smart AAC API
# This file contains environment-specific settings for production deployment

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-production-project-id
VERTEX_AI_LOCATION=us-central1
STORAGE_BUCKET_NAME=your-production-project-id-aac-storage

# Firebase Configuration
FIREBASE_PROJECT_ID=your-production-project-id

# Server Configuration
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Cloud Run Configuration
REGION=us-central1
SERVICE_NAME=smart-aac-api
MIN_INSTANCES=0
MAX_INSTANCES=10
MEMORY=2Gi
CPU=2
CONCURRENCY=100
TIMEOUT=300s

# Service Account
SERVICE_ACCOUNT=smart-aac-api-sa@your-production-project-id.iam.gserviceaccount.com

# Security Configuration
CORS_ORIGINS=https://your-production-frontend.com,https://your-admin-panel.com

# Performance Configuration
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# AI Service Configuration
IMAGEN_MODEL=imagegeneration@005
GEMINI_MODEL=gemini-1.5-flash-001

# Monitoring and Logging
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true