# Staging Environment Configuration for Smart AAC API
# This file contains environment-specific settings for staging deployment

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-staging-project-id
VERTEX_AI_LOCATION=us-central1
STORAGE_BUCKET_NAME=your-staging-project-id-aac-storage

# Firebase Configuration
FIREBASE_PROJECT_ID=your-staging-project-id

# Server Configuration
NODE_ENV=staging
PORT=8080
LOG_LEVEL=debug

# Cloud Run Configuration
REGION=us-central1
SERVICE_NAME=smart-aac-api-staging
MIN_INSTANCES=0
MAX_INSTANCES=5
MEMORY=1Gi
CPU=1
CONCURRENCY=50
TIMEOUT=300s

# Service Account
SERVICE_ACCOUNT=smart-aac-api-sa@your-staging-project-id.iam.gserviceaccount.com

# Security Configuration
CORS_ORIGINS=https://your-staging-frontend.com,http://localhost:3000

# Performance Configuration
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# AI Service Configuration
IMAGEN_MODEL=imagegeneration@005
GEMINI_MODEL=gemini-1.5-flash-001

# Monitoring and Logging
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true